@model IEnumerable<DnDInventorySystem.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

<p>
@{
    var currentGameId = ViewData["CurrentGameId"] as int?;
}
@if (currentGameId.HasValue)
{
    <a asp-action="Create" asp-route-gameId="@currentGameId">Create New</a>
}
else
{
    <span class="text-muted">Select a game to create an item.</span>
}
</p>
<table class="table align-middle">
    <thead>
        <tr>
            <th style="width: 70px;">Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Game</th>
            <th>Creator</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                {
                    <img src="@item.PhotoUrl" alt="@item.Name" class="img-fluid rounded" style="max-width:64px; max-height:64px; object-fit:cover;" />
                }
                else
                {
                    <span class="text-muted small">No image</span>
                }
            </td>
            <td class="fw-semibold">@item.Name</td>
            <td class="text-muted small">@item.Description</td>
            <td class="text-muted small">@item.Category?.Name</td>
            <td class="text-muted small">@item.Game?.Name</td>
            <td class="text-muted small">@item.CreatedByUser?.Name</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
