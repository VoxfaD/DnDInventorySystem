@model DnDInventorySystem.Models.Item

@{
    var gameName = ViewData["CurrentGameName"] as string ?? "Game";
    var gameId = ViewData["CurrentGameId"] as int? ?? 0;
    var returnCharacterId = ViewData["ReturnCharacterId"] as int?;
    var hasCategories = (ViewBag.CategoryId as Microsoft.AspNetCore.Mvc.Rendering.SelectList)?.Any() ?? false;
    ViewData["Title"] = $"Create item Â· {gameName}";
}

<div class="mb-4">
    <h1 class="mb-1">Create item</h1>
    <p class="text-muted mb-0">Items created here will belong to <strong>@gameName</strong>.</p>
</div>

<div class="row">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <input type="hidden" name="gameId" value="@gameId" />
                    @if (returnCharacterId.HasValue)
                    {
                        <input type="hidden" name="returnCharacterId" value="@returnCharacterId" />
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Item image</label>
                        <label class="d-block border border-secondary rounded p-4 text-center drop-zone" id="itemCreateDropZone" style="cursor: pointer; border-style: dashed;">
                            <input type="file" name="photoFile" accept="image/*" class="d-none" id="itemCreatePhotoInput" />
                            <div class="fw-semibold mb-1">Click or drop an image here</div>
                            <div class="text-muted small" id="itemCreateFileName">PNG, JPG up to a few MB.</div>
                        </label>
                        <div class="mt-3 text-center">
                            <img id="itemCreatePreview" src="" alt="Preview" class="img-fluid rounded shadow-sm d-none" style="max-height: 200px; object-fit: cover;" />
                        </div>
                    </div>

                    @if (ViewBag.IsOwner == true)
                    {
                        <div class="form-check mb-3">
                            <input asp-for="ViewableToPlayers" class="form-check-input" />
                            <label asp-for="ViewableToPlayers" class="form-check-label">Visible to players</label>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="ViewableToPlayers" value="true" />
                    }

                    <div class="mb-4">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                            <option value="">Uncategorized</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                        @if (!hasCategories)
                        {
                            <div class="form-text">No categories yet. You can create some from the game page.</div>
                        }
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create item</button>
                        @if (returnCharacterId.HasValue)
                        {
                            <a class="btn btn-link" asp-controller="Characters" asp-action="AssignItems" asp-route-id="@returnCharacterId">Back to assignment</a>
                        }
                        else
                        {
                            <a class="btn btn-link" asp-controller="Games" asp-action="Details" asp-route-id="@gameId">Back to game</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function setupItemCreateDropZone() {
            const fileInput = document.getElementById('itemCreatePhotoInput');
            const fileName = document.getElementById('itemCreateFileName');
            const dropZone = document.getElementById('itemCreateDropZone');
            const preview = document.getElementById('itemCreatePreview');

            function setPreview(file) {
                if (!preview) return;
                if (file) {
                    preview.src = URL.createObjectURL(file);
                    preview.classList.remove('d-none');
                } else {
                    preview.src = '';
                    preview.classList.add('d-none');
                }
            }

            function setName(name) {
                if (!fileName) return;
                fileName.textContent = name || 'PNG, JPG up to a few MB.';
            }

            if (fileInput) {
                fileInput.addEventListener('change', function () {
                    const file = this.files && this.files.length ? this.files[0] : null;
                    setName(file ? file.name : '');
                    setPreview(file);
                });
            }

            if (dropZone && fileInput) {
                dropZone.addEventListener('dragover', function (e) {
                    e.preventDefault();
                    dropZone.classList.add('bg-light');
                });
                dropZone.addEventListener('dragleave', function () {
                    dropZone.classList.remove('bg-light');
                });
                dropZone.addEventListener('drop', function (e) {
                    e.preventDefault();
                    dropZone.classList.remove('bg-light');
                    if (e.dataTransfer.files && e.dataTransfer.files.length) {
                        fileInput.files = e.dataTransfer.files;
                        fileInput.dispatchEvent(new Event('change'));
                    }
                });
            }
        })();
    </script>
}
