<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DnDInventorySystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DnDInventorySystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand top-nav">
            <div class="container-fluid justify-content-center position-relative">
                <a class="navbar-brand mx-auto fw-bold" asp-area="" asp-controller="Home" asp-action="Index">DnD Inventory System</a>
                <div class="position-absolute end-0 d-flex align-items-center gap-2">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="dropdown">
                            <button class="btn user-chip stay-colored" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity?.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end soft-menu" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Edit profile</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link logout-link p-0 text-start">Log out</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.HistorySidebar is DnDInventorySystem.ViewModels.HistorySidebarViewModel historyVm)
    {
        @await Html.PartialAsync("_HistorySidebar", historyVm)
    }

    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2025 - DnDInventorySystem
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
