@model DnDInventorySystem.ViewModels.CharacterInventoryViewModel

@{
    var character = Model.Character;
    ViewData["Title"] = character.Name;
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="mb-1">@character.Name</h1>
        <p class="text-muted mb-0">
            Game: <strong>@character.Game?.Name</strong> Â· Owner: <strong>@character.Owner?.Name</strong>
        </p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="AssignItems" asp-route-id="@character.Id">Give / assign items</a>
        <a class="btn btn-outline-secondary" asp-action="Index" asp-route-gameId="@character.GameId">Back to characters</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h5 class="card-title">Character info</h5>
                <p class="mb-2"><strong>Description:</strong> @(!string.IsNullOrWhiteSpace(character.Description) ? character.Description : "No description")</p>
                <p class="mb-2"><strong>Created by:</strong> @character.CreatedByUser?.Name</p>
                <p class="mb-0"><strong>Portrait:</strong> @(!string.IsNullOrWhiteSpace(character.PhotoUrl) ? character.PhotoUrl : "No portrait set")</p>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Inventory</h5>
                    <span class="text-muted small">@Model.Inventory.Count item entries</span>
                </div>

                @if (!Model.Inventory.Any())
                {
                    <p class="text-muted mb-0">No items assigned yet.</p>
                }
                else
                {
                    <form asp-action="UpdateInventoryBulk" method="post">
                        <input type="hidden" name="characterId" value="@character.Id" />
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div class="text-muted small">@Model.Inventory.Count item entries</div>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Save changes</button>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th style="width: 60px;">Pic</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th style="width: 260px;">Inventory</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Inventory.Count; i++)
                                    {
                                        var entry = Model.Inventory[i];
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(entry.Item?.PhotoUrl))
                                                {
                                                    <img src="@entry.Item.PhotoUrl" alt="@entry.Item.Name" class="img-fluid rounded" style="max-width:48px; max-height:48px;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">No img</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@entry.Item?.Name</div>
                                                <div class="text-muted small">@entry.Item?.Category?.Name</div>
                                            </td>
                                            <td class="text-muted small">@entry.Item?.Description</td>
                                            <td>
                                                <input type="hidden" name="Updates[@i].EntryId" value="@entry.Id" />
                                                <div class="d-flex align-items-center gap-2">
                                                    <input type="number" name="Updates[@i].Quantity" min="1" value="@Model.Updates[i].Quantity" class="form-control form-control-sm" style="width:80px;" />
                                                    <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" name="Updates[@i].IsEquipped" value="true" @(Model.Updates[i].IsEquipped ? "checked" : null) />
                                                    <input type="hidden" name="Updates[@i].IsEquipped" value="false" />
                                                    <label class="form-check-label small">With them</label>
                                                </div>
                                            </div>
                                            </td>
                                            <td class="text-end">
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger"
                                                        formaction="@Url.Action("RemoveInventory")"
                                                        formmethod="post"
                                                        formnovalidate
                                                        name="entryId"
                                                        value="@entry.Id"
                                                        onclick="return confirm('Remove this item from the character?');">
                                                    Remove
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
