@model DnDInventorySystem.ViewModels.CharacterAssignItemsViewModel

@{
    var character = Model.Character;
    ViewData["Title"] = $"Assign items Â· {character.Name}";
}

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="mb-1">Assign items</h1>
        <p class="text-muted mb-0">Give items from <strong>@character.Game?.Name</strong> to <strong>@character.Name</strong>.</p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@character.Id">Back to character</a>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Select items</h5>
            <a class="btn btn-sm btn-primary" asp-controller="Items" asp-action="Create" asp-route-gameId="@character.GameId" asp-route-returnCharacterId="@character.Id">Create item</a>
        </div>

        <form asp-action="AssignItems" method="post">
            <input type="hidden" asp-for="CharacterId" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th style="width:40px;"></th>
                            <th>Item</th>
                            <th>Description</th>
                            <th style="width:120px;">Quantity</th>
                            <th style="width:130px;">With them?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Assignments.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input class="form-check-input" asp-for="Assignments[i].Selected" />
                                    <input type="hidden" asp-for="Assignments[i].ItemId" />
                                </td>
                                <td>
                                    <div class="fw-semibold">@Model.Assignments[i].ItemName</div>
                                    <div class="text-muted small">@Model.Assignments[i].CategoryName</div>
                                    <input type="hidden" asp-for="Assignments[i].ItemName" />
                                    <input type="hidden" asp-for="Assignments[i].CategoryName" />
                                </td>
                                <td class="text-muted small">
                                    @(string.IsNullOrWhiteSpace(Model.Assignments[i].Description) ? "No description" : Model.Assignments[i].Description)
                                    <input type="hidden" asp-for="Assignments[i].Description" />
                                </td>
                                <td>
                                    <input asp-for="Assignments[i].Quantity" class="form-control form-control-sm" min="1" type="number" />
                                </td>
                                <td>
                                    <input class="form-check-input" asp-for="Assignments[i].IsEquipped" />
                                    <label class="form-check-label small">Carried</label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <button type="submit" class="btn btn-success">Assign selected</button>
        </form>
    </div>
</div>
