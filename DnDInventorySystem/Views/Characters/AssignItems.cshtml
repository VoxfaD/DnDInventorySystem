@model DnDInventorySystem.ViewModels.CharacterAssignItemsViewModel

@{
    var character = Model.Character;
    ViewData["Title"] = $"Assign items Â· {character.Name}";
}

@{
    var inventoryCount = ViewBag.InventoryCount as int? ?? 0;
}

<div class="box game-box">
    <div id="assign-meta" data-inventory-count="@inventoryCount"></div>
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-1">Assign items</h1>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@character.Id">Back to character</a>
        </div>
    </div>

    <form asp-action="AssignItems" method="post" id="assign-form">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Select items</h5>
            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-primary" asp-controller="Items" asp-action="Create" asp-route-gameId="@character.GameId" asp-route-returnCharacterId="@character.Id">Create item</a>
                <button type="submit" class="btn btn-sm btn-success">Assign selected</button>
            </div>
        </div>

        <input type="hidden" asp-for="CharacterId" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="table-responsive">
            <table class="table table-striped align-middle assign-table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th style="width:120px;">Quantity</th>
                        <th style="width:130px;">With them?</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Assignments.Count; i++)
                    {
                        <tr class="assign-row @(Model.Assignments[i].Selected ? "selected" : "")" data-row-index="@i">
                            <td>
                                <div class="fw-semibold">@Model.Assignments[i].ItemName</div>
                                <div class="text-muted small">@Model.Assignments[i].CategoryName</div>
                                <input type="hidden" asp-for="Assignments[i].ItemId" />
                                <input type="hidden" asp-for="Assignments[i].ItemName" />
                                <input type="hidden" asp-for="Assignments[i].CategoryName" />
                            </td>
                            <td>
                                <input asp-for="Assignments[i].Quantity" class="form-control form-control-sm no-row-toggle" min="1" type="number" />
                            </td>
                            <td>
                                <input type="hidden" name="Assignments[@i].Selected" value="@(Model.Assignments[i].Selected ? "true" : "false")" class="assignment-selected" data-row-index="@i" />
                                <div class="form-check d-flex align-items-center gap-2">
                                    <input class="form-check-input carry-toggle no-row-toggle" asp-for="Assignments[i].IsEquipped" />
                                    <label class="form-check-label small">Carried</label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @{
            var pageNumber = Model.Page;
            var totalPages = Model.TotalPages;
        }
        @if (totalPages > 1)
        {
            <nav aria-label="Assign items pagination" class="mt-3">
                <ul class="pagination pagination-center">
                    <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link assign-page-link" asp-action="AssignItems" asp-route-id="@character.Id" asp-route-page="@(pageNumber - 1)">Previous</a>
                    </li>
                    <li class="page-item disabled"><span class="page-link">Page @pageNumber of @totalPages</span></li>
                    <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                        <a class="page-link assign-page-link" asp-action="AssignItems" asp-route-id="@character.Id" asp-route-page="@(pageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </form>
</div>

@section Scripts {
    <script>
        (() => {
            const storageKey = `assignSelections-@character.Id`;
            const inventoryCount = parseInt(document.getElementById("assign-meta")?.dataset.inventoryCount || "0", 10);

            const loadSelections = () => {
                try {
                    return JSON.parse(localStorage.getItem(storageKey) || "{}");
                } catch {
                    return {};
                }
            };

            const saveSelections = (map) => {
                localStorage.setItem(storageKey, JSON.stringify(map));
            };

            const applySelections = () => {
                const map = loadSelections();
                document.querySelectorAll(".assign-row").forEach((row) => {
                    const idx = row.dataset.rowIndex;
                    const itemIdInput = row.querySelector('input[name="Assignments[' + idx + '].ItemId"]');
                    if (!itemIdInput) return;
                    const itemId = itemIdInput.value;
                    const hidden = row.querySelector('.assignment-selected');
                    const serverSelected = hidden?.value === "true";
                    const persisted = map[itemId];
                    const effective = serverSelected ? true : persisted === true ? true : false;
                    map[itemId] = effective;
                    row.classList.toggle("selected", effective);
                    if (hidden) hidden.value = effective ? "true" : "false";
                });
                saveSelections(map);
            };

            const persistCurrentSelections = () => {
                const map = loadSelections();
                document.querySelectorAll(".assign-row").forEach((row) => {
                    const idx = row.dataset.rowIndex;
                    const itemIdInput = row.querySelector('input[name="Assignments[' + idx + '].ItemId"]');
                    const hidden = row.querySelector('.assignment-selected');
                    if (!itemIdInput || !hidden) return;
                    map[itemIdInput.value] = hidden.value === "true";
                });
                saveSelections(map);
            };

            document.querySelectorAll(".assign-row").forEach((row) => {
                row.addEventListener("click", () => persistCurrentSelections());
            });

            document.querySelectorAll(".assign-page-link").forEach((link) => {
                link.addEventListener("click", () => {
                    persistCurrentSelections();
                });
            });

            // If character has no inventory and server shows nothing selected, clear stale stored selections
            const serverSelected = Array.from(document.querySelectorAll(".assignment-selected")).some(h => h.value === "true");
            if (inventoryCount === 0 && !serverSelected) {
                localStorage.removeItem(storageKey);
            }

            applySelections();

            const form = document.getElementById("assign-form");
            form?.addEventListener("submit", () => {
                persistCurrentSelections();
                const map = loadSelections();
                // remove previously added hidden persisted inputs
                form.querySelectorAll(".persisted-selected").forEach((n) => n.remove());
                Object.entries(map).forEach(([itemId, selected]) => {
                    if (selected === true) {
                        const input = document.createElement("input");
                        input.type = "hidden";
                        input.name = "persistedSelectedIds";
                        input.value = itemId;
                        input.classList.add("persisted-selected");
                        form.appendChild(input);
                    }
                });
            });
        })();
    </script>
}
