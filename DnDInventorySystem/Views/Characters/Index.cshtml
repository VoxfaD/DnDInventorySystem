@model IEnumerable<DnDInventorySystem.Models.Character>

@{
    ViewData["Title"] = "Index";
    var currentUserId = ViewBag.CurrentUserId as int? ?? 0;
    var isOwner = ViewBag.IsOwner as bool? ?? false;
    var privileges = ViewBag.Privileges as DnDInventorySystem.Models.GamePrivilege? ?? DnDInventorySystem.Models.GamePrivilege.None;
}

<h1>Index</h1>

@if (ViewData["CurrentGameId"] is int gameId)
{
    <div class="mb-3">
        <a class="btn btn-link ps-0" asp-controller="Games" asp-action="Details" asp-route-id="@gameId">Back to game</a>
    </div>
}

<p>
@{
    var currentGameId = ViewData["CurrentGameId"] as int?;
}
@if (currentGameId.HasValue)
{
    if (isOwner || privileges.HasFlag(DnDInventorySystem.Models.GamePrivilege.CreateCharacters))
    {
        <a asp-action="Create" asp-route-gameId="@currentGameId">Create New</a>
    }
}
else
{
    <span class="text-muted">Select a game to create a character.</span>
}
</p>
<table class="table align-middle">
    <thead>
        <tr>
            <th style="width: 70px;">Portrait</th>
            <th>Name</th>
            <th>Description</th>
            <th>Owner</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                {
                    <img src="@item.PhotoUrl" alt="@item.Name" class="img-fluid rounded" style="max-width:64px; max-height:64px; object-fit:cover;" />
                }
                else
                {
                    <span class="text-muted small">No image</span>
                }
            </td>
            <td class="fw-semibold">@item.Name</td>
            <td class="text-muted small">@item.Description</td>
            <td class="text-muted small">@item.Owner?.Name</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (isOwner || (privileges.HasFlag(DnDInventorySystem.Models.GamePrivilege.EditCharacters) && (item.CreatedByUserId == currentUserId || item.OwnerUserId == currentUserId)))
                {
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
                @if (isOwner || (privileges.HasFlag(DnDInventorySystem.Models.GamePrivilege.DeleteCharacters) && item.CreatedByUserId == currentUserId))
                {
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var pageNumber = ViewBag.Page as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}
@if (totalPages > 1)
{
    <nav aria-label="Characters pagination">
        <ul class="pagination">
            <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-gameId="@ViewData["CurrentGameId"]" asp-route-page="@(pageNumber - 1)">Previous</a>
            </li>
            <li class="page-item disabled"><span class="page-link">Page @pageNumber of @totalPages</span></li>
            <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-gameId="@ViewData["CurrentGameId"]" asp-route-page="@(pageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
