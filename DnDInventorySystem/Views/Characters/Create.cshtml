@model DnDInventorySystem.Models.Character

@{
    var gameName = ViewData["CurrentGameName"] as string ?? "Game";
    var gameId = ViewData["CurrentGameId"] as int? ?? 0;
    ViewData["Title"] = $"Create character Â· {gameName}";
}

<div class="mb-4">
    <h1 class="mb-1">Create character</h1>
    <p class="text-muted mb-0">Add a new hero or NPC to <strong>@gameName</strong> and assign it to a player.</p>
</div>

<div class="row">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <input type="hidden" name="gameId" value="@gameId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhotoUrl" class="form-label">Portrait URL (optional)</label>
                        <input asp-for="PhotoUrl" class="form-control" />
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="OwnerUserId" class="form-label">Assigned user</label>
                        <select asp-for="OwnerUserId" class="form-select" asp-items="ViewBag.OwnerUserId">
                            <option value="">Select a user</option>
                        </select>
                        <span asp-validation-for="OwnerUserId" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create character</button>
                        <a class="btn btn-link" asp-controller="Games" asp-action="Details" asp-route-id="@gameId">Back to game</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
