@model DnDInventorySystem.Models.Game

@{
    ViewData["Title"] = "Create";
}

<div class="box game-box game-form-box">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="mb-0">Create a new game</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <form asp-controller="Games" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create game</button>
                    <a asp-action="Index" class="btn btn-link">Back to games</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
