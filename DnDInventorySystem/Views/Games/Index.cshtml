@model IEnumerable<DnDInventorySystem.Models.Game>

@{
    ViewData["Title"] = "Your games";
    var hasGames = Model.Any();
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-4">
    <div>
        <h1 class="mb-1">Select a game session</h1>
        <p class="text-muted mb-0">Create a new campaign or join one that already exists.</p>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Join">Join game</a>
        <a class="btn btn-primary" asp-action="Create">Create game</a>
    </div>
</div>

@if (TempData["GameMessage"] is string message)
{
    <div class="alert alert-success">@message</div>
}

@if (!hasGames)
{
    <div class="alert alert-info">
        You are not part of any games yet. Create a new game or join one using the buttons above.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Game master</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt.ToString("g")</td>
                    <td>@item.CreatedByUser?.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Open</a>
                        @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == item.CreatedByUserId.ToString())
                        {
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
