@model DnDInventorySystem.Models.Game

@{
    ViewData["Title"] = Model.Name;
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var canEdit = currentUserId == Model.CreatedByUserId.ToString();
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="mb-1">@Model.Name</h1>
        <div class="text-muted">Hosted by @Model.CreatedByUser?.Name Â· @Model.CreatedAt.ToString("f")</div>
    </div>
    <div class="d-flex gap-2">
        @if (canEdit)
        {
            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        <a class="btn btn-link" asp-action="Index">Back to games</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">@Model.Description</p>
    </div>
</div>
