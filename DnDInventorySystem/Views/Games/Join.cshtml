@model DnDInventorySystem.ViewModels.JoinGameViewModel

@{
    ViewData["Title"] = "Join a game";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h1 class="mb-1">Join a game</h1>
        <p class="text-muted mb-0">Enter a join code to become part of a campaign.</p>
    </div>
    <a asp-action="Index" class="btn btn-link">Back to your games</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Have a code?</h5>
                <p class="text-muted mb-3">Your game master can generate a code in the format <code>XXX-XXXX-XXXX</code>. Paste it below to join.</p>

                <form asp-action="Join" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="JoinCode" class="form-label"></label>
                        <input asp-for="JoinCode" class="form-control" placeholder="ABC-1234-XYZ9" />
                        <span asp-validation-for="JoinCode" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Join game</button>
                        <a asp-action="Create" class="btn btn-outline-secondary">Create a game instead</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
