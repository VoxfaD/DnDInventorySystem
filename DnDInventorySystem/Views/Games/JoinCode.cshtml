@model DnDInventorySystem.ViewModels.JoinCodeViewModel

@{
    ViewData["Title"] = "Manage join code";
}

<div class="box game-box">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="mb-1">Manage join code</h1>
            <p class="text-muted mb-0">Generate or disable the invite code for "@Model.GameName".</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.GameId" class="btn btn-link">Back to game</a>
    </div>

    @if (TempData["GameMessage"] is string status)
    {
        <div class="alert alert-info">@status</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.HasJoinCode)
            {
                <h5 class="card-title mb-3">No join code yet</h5>
                <p class="text-muted">Create a code so players can join using <code>XXX-XXXX-XXXX</code>. The code will be active right away.</p>
                <form asp-action="GenerateJoinCode" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="gameId" value="@Model.GameId" />
                    <button type="submit" class="btn btn-primary">Generate join code</button>
                </form>
            }
            else
            {
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-3">
                    <div>
                        <div class="text-muted small mb-1">Join code</div>
                        <div class="display-6 fw-semibold">@Model.JoinCode</div>
                    </div>
                    <span class="badge @(Model.JoinCodeActive ? "bg-success" : "bg-secondary")">
                        @(Model.JoinCodeActive ? "Active" : "Inactive")
                    </span>
                </div>
                <p class="text-muted">Share this code with players who should be able to join. Inactive codes cannot be used.</p>

                <div class="d-flex flex-wrap gap-2 pt-2">
                    <form asp-action="GenerateJoinCode" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" value="@Model.GameId" />
                        <button type="submit" class="btn btn-outline-primary">Regenerate &amp; activate new code</button>
                    </form>
                    <form asp-action="ToggleJoinCode" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="gameId" value="@Model.GameId" />
                        <input type="hidden" name="activate" value="@(Model.JoinCodeActive ? "false" : "true")" />
                        <button type="submit" class="btn @(Model.JoinCodeActive ? "btn-outline-danger" : "btn-outline-success")">
                            @(Model.JoinCodeActive ? "Deactivate code" : "Activate code")
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
