@model IEnumerable<DnDInventorySystem.Models.Category>

@{
    ViewData["Title"] = "Index";
    var currentUserId = ViewBag.CurrentUserId as int? ?? 0;
    var isOwner = ViewBag.IsOwner as bool? ?? false;
}

<h1>Index</h1>

@if (ViewData["CurrentGameId"] is int gameId)
{
    <div class="mb-3">
        <a class="btn btn-link ps-0" asp-controller="Games" asp-action="Details" asp-route-id="@gameId">Back to game</a>
    </div>
}

<p>
@{
    var currentGameId = ViewData["CurrentGameId"] as int?;
}
@if (currentGameId.HasValue)
{
    <a asp-action="Create" asp-route-gameId="@currentGameId">Create New</a>
}
else
{
    <span class="text-muted">Select a game to create a category.</span>
}
</p>
<table class="table align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Game</th>
            <th>Creator</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        var collapseId = $"cat-items-{item.Id}";
        <tr>
            <td>
                <button class="btn btn-link p-0 text-decoration-none" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                    @item.Name
                </button>
            </td>
            <td>@item.Game?.Name</td>
            <td>@item.CreatedByUser?.Name</td>
            <td class="text-end">
                @if (isOwner || item.CreatedByUserId == currentUserId)
                {
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
                else
                {
                    <span class="text-muted small">View only</span>
                }
            </td>
        </tr>
        <tr class="collapse" id="@collapseId">
            <td colspan="4" class="bg-light">
                <div class="fw-semibold mb-2">Items in @item.Name</div>
                @if (item.Items == null || !item.Items.Any())
                {
                    <div class="text-muted small">No items in this category.</div>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var it in item.Items)
                        {
                            <li class="mb-1 d-flex justify-content-between">
                                <span>@it.Name</span>
                                <a class="small" asp-controller="Items" asp-action="Details" asp-route-id="@it.Id">Open</a>
                            </li>
                        }
                    </ul>
                }
            </td>
        </tr>
}
    </tbody>
</table>
