@model DnDInventorySystem.Models.Category

@{
    var gameName = ViewData["CurrentGameName"] as string ?? "Game";
    ViewData["Title"] = $"Edit category Â· {gameName}";
}

<div class="box game-box game-form-box">
    <div class="mb-4">
        <h1 class="mb-1">Edit category</h1>
        <p class="text-muted mb-0">Update this category for <strong>@gameName</strong>.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-xl-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="GameId" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            <a class="btn btn-link" asp-action="Index" asp-route-gameId="@Model.GameId">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
